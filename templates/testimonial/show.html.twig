{% extends 'base.html.twig' %}

{% block title %}Testimonial{% endblock %}

{% block body %}
    <h1>Testimonial</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ testimonial.id }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ testimonial.fullname }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ testimonial.note }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ testimonial.comment }}</td>
            </tr>
            <tr>
                <th>Approved</th>
                <td>{{ testimonial.approved ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_testimonial_index') }}">back to list</a>

    <a href="{{ path('app_testimonial_edit', {'id': testimonial.id}) }}">edit</a>

    {{ include('testimonial/_delete_form.html.twig') }}
{% endblock %}
